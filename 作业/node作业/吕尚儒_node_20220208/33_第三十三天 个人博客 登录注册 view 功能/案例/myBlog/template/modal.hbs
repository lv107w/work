<div class="blog-modal--wrap">
  <div class="blog-modal--head">
    <h4 class="blog-modal--title">{{title}}</h4>
    <button type="button" class="close blog-modal--close" data-btn-target="close"><span
        aria-hidden="true">&times;</span></button>
  </div>
  <div class="blog-modal--content">
    <form class="form-horizontal">
      {{#each formData}}
      <div class="form-group">
        <label class="col-sm-2 control-label">{{label}}</label>
        <div class="col-sm-10">
          <input type="{{type}}" data-input-query="{{query}}" class="form-control" placeholder="{{placeholder}}">
        </div>
      </div>
      {{/each}}
    </form>
  </div>
  <div class="blog-modal--foot">
    {{#each btns}}
    <button type="button" class="btn btn-default" data-btn-target="{{targetName}}">{{name}}</button>
    {{/each}}
  </div>
</div>