/*base start*/
html 
  font-family: Georgia, 'Times New Roman', Times, serif, "Microsoft yahei";
  color: #222;

a 
  color: gray;

a:hover 
  color: gray;
  cursor: pointer;
  text-decoration: none;

img 
  width: 100%;

ul 
  list-style: none;
  margin: 0;
  padding: 0;

h1 
  margin: 0;

::placeholder 
  color: #ccc;


[class^="ico"]{
  font-size 20px
}

.blog-line--col 
  position relative
  &::after
    position absolute
    right 0
    top 0
    bottom 0
    margin auto
    content ''
    width 1px 
    height 80%
    background-color line-theme-color
    transform scaleX(.5)

.glyphicon 
  top 3px !important

[hidden]
  display none !important
/*base end*/